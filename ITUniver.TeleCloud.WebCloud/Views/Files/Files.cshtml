@model IEnumerable<ITUniver.TeleCloud.WebCloud.Models.FileItemModel>

@{
    ViewBag.Title = "Дисковое пространство";
}
<h2>Дисковое пространство</h2>

<table id="mytable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUser.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreate)
            </th>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameFile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUser.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreate)
                </td>
                <td>
                    @Html.ActionLink("Скачать", "Download", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#mytable").tablesorter({ headers: { 3: { sorter: false } } });
    });
</script>